<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".OTPActivity">

    <TextView
        android:id="@+id/Register_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/aref_ruqaa_bold"
        android:padding="12dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="@color/titleColor"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Register_Title"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="OTP has been sent to your email"
            android:textColor="@color/colorBlack"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/enter_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Enter OTP"
            android:inputType="number"
            android:maxLines="1"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/accountBackground"
            android:textColorHint="@color/accountLabel"
            android:textSize="17sp" />

        <Button
            android:id="@+id/send_otp"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="35dp"
            android:background="@color/signUp"
            android:text="SEND OTP"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="If didn't received OTP\nPlease try again
If you already have account\nPlease go to login page"
        android:textColor="@color/colorBlack"
        android:textSize="12dp" />

</RelativeLayout>
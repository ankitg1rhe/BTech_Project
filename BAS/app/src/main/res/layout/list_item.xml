<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@color/background"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="@dimen/zero_length"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/titleColor"
            android:textSize="14sp"
            tools:text="2018-09-24 10:54:24" />

        <TextView
            android:id="@+id/from_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            tools:text="From HERE to THERE" />

        <TextView
            android:id="@+id/to_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            tools:text="From HERE to THERE" />

        <TextView
            android:id="@+id/no_of_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            tools:text="Number" />

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            tools:text="Number" />

        <TextView
            android:id="@+id/auto_driver_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            tools:text="AUTO ID : none" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="@color/titleColor"
            android:textSize="14sp"
            tools:text="Status" />

        <TextView
            android:id="@+id/status_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="monospace"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            tools:text="Pending" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ConfirmOrderActivity">

    <TextView
        android:id="@+id/title_of_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/aref_ruqaa_bold"
        android:padding="12dp"
        android:text="@string/title_activity_order"
        android:textColor="@color/titleColor"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/confirm_order_button"
        android:layout_below="@+id/title_of_confirm"
        android:padding="20dp"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_date_in_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/titleColor"
            android:textSize="18sp"
            tools:text="2018-09-24 10:54:24" />


        <TextView
            android:id="@+id/order_time_in_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/titleColor"
            android:textSize="18sp"
            tools:text="2018-09-24 10:54:24" />

        <TextView
            android:id="@+id/from_source_in_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            tools:text="From HERE" />

        <TextView
            android:id="@+id/to_destination_in_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            tools:text="To THERE" />

        <TextView
            android:id="@+id/no_of_customer_in_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:maxLines="1"
            android:textSize="24sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            tools:text="Number of Customer" />

        <TextView
            android:id="@+id/customer_name_in_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/aref_ruqaa_bold"
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            tools:text="Name of customer" />

    </LinearLayout>

    <Button
        android:id="@+id/confirm_order_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/signUp"
        android:text="CONFIRM"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</RelativeLayout>